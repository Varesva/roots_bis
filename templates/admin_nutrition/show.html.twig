{% extends 'base.html.twig' %}

{% block title %}Afficher Nutrition
{% endblock %}

{% block body %}
	<h1>
		Afficher type Nutrition</h1>

	<section class="container">
		<div class="table-responsive-lg">

			<table class="table text-center table-striped table-bordered">

				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ nutrition.id }}</td>
					</tr>
					<tr>
						<th>Regime</th>
						<td>{{ nutrition.regime }}</td>
					</tr>
					<tr>
						<th>Image</th>
						<td>
							<img src="{{asset('upload/' ~ nutrition.image)}}" width="200">
						</td>
					</tr>
					<tr>
						<th>Definition</th>
						<td>{{ nutrition.definition }}</td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="d-flex justify-content-center flex-wrap">

			<a href="{{ path('app_admin_nutrition_index') }}" class="btn btn-outline-dark">Retour à la liste des catégories</a>

			<a href="{{ path('app_admin_nutrition_edit', {'id': nutrition.id}) }}" class="btn btn-outline-warning">Modifier</a>

			{{ include('admin_nutrition/_delete_form.html.twig') }}
		</div>
	</section>
{% endblock %}
