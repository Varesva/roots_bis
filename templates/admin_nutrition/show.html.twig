{% extends 'base.html.twig' %}

{% block title %}Admin - Afficher un type de Nutrition - Roots
{% endblock %}

{% block body %}
	<h1>
		Afficher un type de Nutrition</h1>
	<section class="container">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ nutrition.id }}</td>
				</tr>
				<tr>
					<th>Regime</th>
					<td>{{ nutrition.regime }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>
						<img src="{{asset('upload/' ~ nutrition.image)}}" width="150" height="100">
					</td>
				</tr>
				<tr>
					<th>Definition</th>
					<td>{{ nutrition.definition }}</td>
				</tr>
			</tbody>
		</table>
		<div class="d-flex justify-content-around">

			<a href="{{ path('app_admin_nutrition_edit', {'id': nutrition.id}) }}" class="btn btn-outline-warning">Modifier</a>


			<a href="{{ path('app_admin_nutrition_index') }}" class="btn btn-outline-dark">Retour à la liste des catégories</a>

			{{ include('admin_nutrition/_delete_form.html.twig') }}
		</div>
	</section>
{% endblock %}
