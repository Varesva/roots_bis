{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

<section class="container">
	<div class="table-responsive-lg">

		<table class="table text-center ">

        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ produit.titre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ produit.image }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Giftcard_valeur</th>
                <td>{{ produit.giftcardValeur }}</td>
            </tr>
            <tr>
                <th>Livre_auteur</th>
                <td>{{ produit.livreAuteur }}</td>
            </tr>
            <tr>
                <th>Livre_edition</th>
                <td>{{ produit.livreEdition }}</td>
            </tr>
            <tr>
                <th>Livre_resume</th>
                <td>{{ produit.livreResume }}</td>
            </tr>
        </tbody>

    </table>
</div>
<div class="d-flex flex-wrap justify-content-center">

	<a href="{{ path('app_profile_user_commande') }}" class="btn btn-outline-dark m-2">
		Retour à la liste des commandes
	</a>

	<a href="{{path('app_profile_user')}}" class="btn btn-outline-dark m-2">
		Retour à mon profil
	</a>

	<a href="{{path('app_home')}}" class="btn btn-warning m-2">
		<i class="fa-solid fa-sm fa-house"></i>
		Accueil
	</a>
</div>

</section> 
    {# <a href="{{ path('app_produit_index') }}">back to list</a> #}

{% endblock %}
