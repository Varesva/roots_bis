{% extends 'base.html.twig' %}

{% block title %}
	Admin - Afficher Restaurant - Roots
{% endblock %}

{% block body %}
	<h1>Afficher ce Restaurant</h1>
	<section class="container">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ restaurant.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ restaurant.nom }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>
						<img src="{{asset('upload/' ~ restaurant.image)}}" width="150" height="100">
					</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ restaurant.description }}</td>
				</tr>
				<tr>
					<th>Num_rue</th>
					<td>{{ restaurant.numRue }}</td>
				</tr>
				<tr>
					<th>Rue</th>
					<td>{{ restaurant.rue }}</td>
				</tr>
				<tr>
					<th>Code_postal</th>
					<td>{{ restaurant.codePostal }}</td>
				</tr>
				<tr>
					<th>Ville</th>
					<td>{{ restaurant.ville }}</td>
				</tr>
				<tr>
					<th>Catégorie</th>
					<td>{{ restaurant.categorie }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ restaurant.email }}</td>
				</tr>
				<tr>
					<th>Telephone</th>
					<td>{{ restaurant.telephone }}</td>
				</tr>
				<tr>
					<th>Website</th>
					<td>{{ restaurant.website }}</td>
				</tr>
			</tbody>
		</table>
		<div class="d-flex justify-content-around">

			<a href="{{ path('app_admin_restaurant_edit', {'id': restaurant.id}) }}" class="btn btn-outline-warning">Modifier</a>

			<a href="{{ path('app_admin_restaurant_index') }}" class="btn btn-outline-dark">Retour à la liste des restaurants</a>

			{{ include('admin_restaurant/_delete_form.html.twig') }}
		</div>
	</section>

{% endblock %}
