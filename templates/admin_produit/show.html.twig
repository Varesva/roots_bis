{% extends 'base.html.twig' %}

{% block title %}Admin - Afficher un Produit - Roots

{% endblock %}

{% block body %}
	<h1>Afficher un Produit</h1>

	<section class="container">

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ produit.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ produit.titre }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>
						<img src="{{asset('upload/' ~ produit.image)}}" width="150" height="100">
					</td>
				</tr>

				<tr>
					<th>Prix</th>
					<td>{{ produit.prix }}
						€
					</td>
				</tr>
				<tr>
					<th>Giftcard_valeur</th>
					<td>{{ produit.giftcardValeur }}</td>
				</tr>
				<tr>
					<th>Livre_auteur</th>
					<td>{{ produit.livreAuteur }}</td>
				</tr>
				<tr>
					<th>Livre_edition</th>
					<td>{{ produit.livreEdition }}</td>
				</tr>
				<tr>
					<th>Livre_resume</th>
					<td>{{ produit.livreResume }}</td>
				</tr>
			</tbody>
		</table>

		<div class="d-flex justify-content-around">

			<a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}" class="btn btn-outline-warning">Modifier</a>

			<a href="{{ path('app_admin_produit_index') }}" class="btn btn-outline-dark">Retour à la liste des catégories</a>

			{{ include('admin_produit/_delete_form.html.twig') }}
		</div>
	</section>
{% endblock %}
