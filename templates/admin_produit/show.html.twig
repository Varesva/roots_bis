{% extends 'base.html.twig' %}

{% block title %}
	Afficher Produit

{% endblock %}

{% block body %}

	<div class="bg_admin">

		<h1>Afficher Produit</h1>
		<div class="container">
			<div class="table-responsive-lg">

				<table class="table table-secondary table-hover table-striped table-bordered border-secondary">

					<tbody>
						<tr>
							<th scope="col">Id</th>
							<td>{{ produit.id }}</td>
						</tr>
						<tr>
							<th scope="col">Titre</th>
							<td>{{ produit.titre }}</td>
						</tr>
						<tr>
							<th scope="col">Image</th>
							<td>
								<img src="{{asset('upload/' ~ produit.image)}}" width="150" height="100">
							</td>
						</tr>

						<tr>
							<th scope="col">Prix</th>
							<td>{{ produit.prix }}
								â‚¬
							</td>
						</tr>
						<tr>
							<th scope="col">Giftcard_valeur</th>
							<td>{{ produit.giftcardValeur }}</td>
						</tr>
						<tr>
							<th scope="col">Livre_auteur</th>
							<td>{{ produit.livreAuteur }}</td>
						</tr>
						<tr>
							<th scope="col">Livre_edition</th>
							<td>{{ produit.livreEdition }}</td>
						</tr>
						<tr>
							<th scope="col">Livre_resume</th>
							<td>{{ produit.livreResume }}</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="d-flex justify-content-center flex-wrap">

				<a href="{{ path('app_admin_produit_index') }}" class="btn btn-light  ">Retour index Produit</a>

				<a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}" class="btn  btn-warning">Modifier</a>

				{{ include('admin_produit/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
