{% extends 'base.html.twig' %}

{% block title %}
	Me connecter - Roots
{% endblock %}

{% block body %}

	{# container #}
	<div class="register_container">
		<div
			class="section_other position_center">
			{# text container et section inscription #}
			<div
				class="row row_register g-3 position_center">
				{# section connexion #}
				<h1 class="position_center col-12">
					Inscription
				</h1>
				<div class="row_center">
					<p>
						Pas encore de compte ?
					</p>
					<i class="fa-solid fa-angles-down"></i>
				</div>
				<a role="button" class="btn btn_other" href="{{path('app_register')}}">
					S'inscrire
				</a>
			</div>

		</div>
		{# section connexion #}
		<section class="section_main position_center">
			<h1 class="position_center">
				Connexion
			</h1>

			{# formulaire de connexion #}
			<form
				method="post">
				{# block de sécurité #}

				<div class="row row_register g-3 position_center">
					{# block d'indication que user est deja connecté et chemin pour logout #}
					{# {% if app.user %}
					                            <div class="mb-3">
					                                Vous êtes connecté.e que
					                                {{ app.user.username }},
					                                <a href="{{ path('app_logout') }}">Déconnexion</a>
					                            </div>
					                        {% endif %} #}
						<small class="info_detail"> *champs obligatoires
					</small>

					<div class="col-12">
						<label for="inputEmail" class="form-label">
							Email*
						</label>

						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="email@exemple.com" autocomplete="email" required autofocus>
					</div>

					<div class="col-12">
						<label for="inputPassword" class="form-label">
							Mot de passe*
						</label>

						<input type="password" name="password" id="inputPassword" placeholder="6 caractères minimum" class="form-control" autocomplete="current-password" required>
					</div>

					{#Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
										                    See https://symfony.com/doc/current/security/remember_me.html#}


					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<div class="checkbox mb-3 container-fluid">
						<label>
							<input type="checkbox" name="_remember_me" checked>
							Se souvenir de moi
						</label>
						{% if error %}
							<small class="alert alert-danger bg-danger text-white">
								{{ error.messageKey|trans(error.messageData, 'security') }}
							</small>
						{% endif %}
					</div>

					<div class="row_center">
						<button class="btn btn_main" type="submit">
							Se connecter
						</button>

						<p>
							<a href="{{path('app_forgot_password_request')}}">
								Mot de passe oublié ?
							</a>
						</p>
					</div>
				</div>
			</form>
		</section>
	</div>
{% endblock %}
