{% extends 'base.html.twig' %}

{% block title %}
{{controller_name}}

{% endblock %}

{% block body %}
<div class="register_container">
	<section class="section_other">

{# container #}
<div
	class="register_container">

	{# section connexion #}
	<div class="section_main position_center">
		<div class="row row_register g-3 position_center">
			<h1 class="position_center col-12">
				{{inscription}}
			</h1>
			<p class="col-12 position_center">
				Vous n'avez pas encore de compte sur Roots ?
			</p>
			<a role="button" class="btn btn_other" href="{{path('app_register')}}">
				Cr√©er mon compte
			</a>

		</div>
	</div>

	</section>

	<section class="section_main position_center">
		<h1 class="position_center">{{connexion}}</h1>

        <div class="row row_register g-3 position_center">
                    <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-lg btn-primary" type="submit">
                    Sign in
                </button>
            </form>
        </div>
    </section>
</div>

{% endblock %}
