{% extends 'base.html.twig' %}

{% block title %}
	Afficher une Commande
{% endblock %}

{% block body %}
	<h1>
		Admin Commande ref.
		{{ commande.reference }}
	</h1>

	<section class="container">
		<div class="table-responsive-lg">

			<table class="table text-center table-hover table-bordered">

				<thead>
					<tr class="table-dark text-uppercase">
						<th scope="col">
							#ID
						</th>
						<th scope="col">
							Date
						</th>
						<th scope="col">
							#Ref
						</th>
						<th scope="col">
							#User
						</th>
						<th scope="col">
							Total (TTC)
						</th>
					</tr>
					<tr>
						<td>
							{{ commande.id }}
						</td>
						<td>
							{{ commande.date ? commande.date|date('d/m/y (@H:i:s)') : '' }}
						</td>

						<td>
							{{ commande.reference }}
						</td>

						<td>
							<a href="{{ path('app_admin_commande_user', {'id': commande.user.id}) }}" class="btn btn-sm btn-secondary mx-1">
								{{ commande.user.prenom ~ ' ' ~ commande.user.nom | upper }}
							</a>
						</td>
						<td>
							{{ commande.totalFacturation }}€
						</td>
					</tr>
					<tr>
						<th colspan="6" class="table-dark">
							Liste des produits
						</th>
					</tr>
					<tr class="table-secondary">
						<th>#Id-ligneCommande</th>
						<th>#Id-Produit</th>
						<th>Nom produit</th>
						<th>Prix unitaire</th>
						<th>Qté</th>
					</tr>
				</thead>
				<tbody>

					{% for ligne_commande in lignes_commande %}
						<tr>
							<td>
								<a href="{{ path('app_admin_ligne_commande_show', {'id': ligne_commande.id}) }}" class="btn btn-sm btn-outline-dark">
									#LC :
									{{ ligne_commande.id }}
								</a>
							</td>
							<td>
								<a href="{{ path('app_admin_commande_produit', {'id': ligne_commande.produit.id}) }}" class="btn btn-sm btn-outline-dark mx-1">
									#Produit :
									{{ ligne_commande.produit.id }}
								</a>
							</td>
							<td>
								{{ ligne_commande.produit }}
							</td>
							<td>
								{{ ligne_commande.produit.prix }}€
							</td>
							<td>
								{{ ligne_commande.quantite }}
							</td>

						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="d-flex flex-wrap justify-content-center">

			<a href="{{ path('app_admin_commande_index') }}" class="btn btn-outline-dark m-2">
				Retour aux commandes
			</a>

			<a href="{{ path('app_admin_commande_edit', {'id': commande.id}) }}" class="btn btn-warning m-2">Modifier</a>

			{{ include('admin_commande/_delete_form.html.twig') }}

		</div>

	</section>

{% endblock %}
