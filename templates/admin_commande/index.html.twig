{% extends 'base.html.twig' %}

{% block title %}Admin - Commande index - Roots
{% endblock %}


{% block body %}
    <h1>Commande index</h1>
<section class="container">
<p>Gérer les commandes du site</p>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.date ? commande.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
<a href="{{ path('app_admin_commande_show', {'id': commande.id}) }}" class="btn btn-outline-info">Afficher</a>

<a href="{{ path('app_admin_commande_edit', {'id': commande.id}) }}" class="btn btn-outline-warning">Modifier</a>

                </td>
            </tr>
        {% else %}
            <tr>
<td colspan="3">Pas de résultat</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

<a href="{{ path('app_admin_commande_new') }}" class="btn btn-outline-dark">Créer une nouvelle commande</a>

{% endblock %}
