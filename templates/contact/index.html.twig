{% extends 'base.html.twig' %}

{% block title %}
	Nous contacter
{% endblock %}

{% block metadesc %}
	Besoin de contacter le service client de Roots par email ou par téléphone ? Obtenez rapidement les réponses à toutes vos questions !
{% endblock %}

{% block body %}
	<h1>
		Nous contacter
	</h1>
	<section class="bg-roots-yellow-linear">

		{{ form_start(contactForm, {
			'attr' : { 
				'id' : 'recaptcha-form',
				}
		} ) }}

		<div class="row g-3">
			<p class="small">
				*Champs obligatoires
			</p>

			{{ form_row(contactForm.identity, {
					'label' : 'Nom complet*',
				'row_attr' : {'class' : 'col-md-6'},
				'value': (app.user) ? app.user.prenom ~' '~ app.user.nom|upper : '',
				} ) 
			}}

			{{ form_row(contactForm.email, { 
				'label' : 'Email*', 
				'row_attr' : {'class' : 'col-md-6 mb-3'},
				'value': (app.user) ? app.user.email : '',
				} )
			}}

			{{ form_row(contactForm.subject, {
				'label' : 'Objet*',
				'row_attr' : {'class' : 'col-12'},
			} ) }}

			{{ form_row(contactForm.message, {
			'label' : 'Message*',
				'row_attr' : {'class' : 'col-12'},
			} ) }}

			{{ form_row(contactForm.attachement, {
				'row_attr' : {'class' : 'col-sm-6 mb-3'},
			} ) }}

			{{ form_row(contactForm.send) }}

			{{ form_end(contactForm) }}
		</div>

		<div class="text-center mt-3">
			<ul class="mb-3">
				<li>
					<a href="tel:+33600000000">
						<i class="fa-solid fa-phone mx-1"></i>
						06.00.00.00.00
					</a>
				</li>
				<li>
					<a href="https://goo.gl/maps/iqavF1LSDoXUHwCbA">
						<i class="fa-solid fa-house mx-1"></i>Paris 11e, France
					</a>
				</li>
			</ul>

			<div class="googlemaps_embed m-auto" width="250" height="250" id="!1m18!1m12!1m3!1d20999.219762729637!2d2.38154615!3d48.86007015!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66df6d6fb2ac5%3A0x1c0b82c6e1d851a0!2s75011%20Paris!5e0!3m2!1sfr!2sfr!4v1655212478504!5m2!1sfr!2sfr"></div>

		</div>
	</section>
{% endblock %}

{% block javascripts %}

<script type="text/javascript">
if (element.addEventListener) {
    element.addEventListener("submit", function(evt) {
        evt.preventDefault();
        window.history.back();
    }, true);
}
else {
    element.attachEvent('onsubmit', function(evt){
        evt.preventDefault();
        window.history.back();
    });
}
</script>

{% endblock %}
