{% extends 'base.html.twig' %}

{% block title %}
	Message envoyé !
{% endblock %}

{% block body %}

	<h1>
		Message envoyé !
	</h1>

	<section class="mb-5  bg-roots-yellow-bordered">

		<div class="mx-auto text-center">
			<p class="mb-5 h4 text-dark">
				Merci
				<span class="font-weight-bold text-success">
					{{ data.identity | capitalize }}
				</span>
				pour votre message !
			</p>
			<p class="mb-3">
				L'équipe de Roots reviendra vers vous dans les meilleurs délais.
			</p>
			<p class="mb-3">
				Nous vous répondrons sur l'adresse email suivante :
				<span class=" font-weight-bold text-success">
					{{ data.email | lower }}
				</span>
				<br>
				(Vérifiez vos spams !)
			</p>

			<div class="mt-4 mb-2">
				<p class="mb-3">
					Copie de votre message :
				</p>
				<p class="contact_copy text-wrap">
					{{ data.message | capitalize }}
				</p>
			</div>
		</div>

		<div class="d-flex justify-content-center m-2">
			<a role="button" href="{{path('app_home') }}" aria-label="Page d'accueil" class="btn btn-lg btn-warning">
				Accueil&nbsp
				<i class="fa-solid fa-sm fa-house"></i>
			</a>
		</div>

	</section>

{% endblock %}