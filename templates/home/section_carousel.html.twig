{% block section_carousel %}

	<style>
		.card-deck div.card {
			width: 13rem;
		}
		.card-deck div.card-title {
			font-size: 18px;
		}
		.card-deck .card-body {
			overflow: hidden;
			text-overflow: ellipsis;
			white-space: nowrap;
		}
		.carousel-inner {
			grid-width: 159.031px;
			/* padding-left: 10px;
			padding-right: 10px;
			margin-left: -10px;
			margin-right: -10px; */
		}
	</style>

	<h2 class=" mb-0">
		Nos dernières sélections de restaurants !
	</h2>

	<div id="carouselExampleControls" class="carousel slide" data-interval="false">

		<div class="carousel-inner">

			<div class="carousel-item active">
				<div class="card-deck">
					{% for restaurant in carousel_restaurants1  %}
						<div class="card card-restaurant">
							<img
							class="card-img-top" src="https://fakeimg.pl/250x100/" alt="Image du restaurant">

							{# <img class="card-img-top" src="{{asset('upload/' ~ restaurant.image)}}" alt="Image du restaurant"> #}

							<div class="card-body">
								<div class="card-title">{{ restaurant.nom }}</div>

								<small class="card-text">
									{{ restaurant.codePostal }},
									{{ restaurant.ville }}
								</small>
								<div class="card_favoris">
									<a class="card_container" href="{{ path('app_restaurant_show', {'id': restaurant.id}) }}">
										Découvrir...
									</a>
									<a type="button" id="addFav" href="{{ path('app_profile_control_favoris', {'id': restaurant.id}) }}">
										<i class="fa-solid fa-xl fa-star"></i>
									</a>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>

			<div class="carousel-item">
				<div class="card-deck">
					{% for restaurant in carousel_restaurants2 %}
						<div
							class="card card-restaurant">

							{# <img class="card-img-top" src="{{asset('upload/' ~ restaurant.image)}}" alt="Image du restaurant"> #}
							<img class="card-img-top" src="https://fakeimg.pl/250x100/" alt="Image du restaurant">

							<div class="card-body">
								<div class="card-title">{{ restaurant.nom }}</div>

								<small class="card-text">
									{{ restaurant.codePostal }},
									{{ restaurant.ville }}
								</small>
								<div class="card_favoris">
									<a class="card_container" href="{{ path('app_restaurant_show', {'id': restaurant.id}) }}">
										Découvrir...
									</a>
									<a type="button" id="addFav" href="{{ path('app_profile_control_favoris', {'id': restaurant.id}) }}">
										<i class="fa-solid fa-xl fa-star"></i>
									</a>
								</div>

							</div>
						</div>
					{% endfor %}
				</div>
			</div>
			<div class="carousel-item">
				<div class="card-deck">
					{% for restaurant in carousel_restaurants3 %}
						<div
							class="card card-restaurant">

							{# <img class="card-img-top" src="{{asset('upload/' ~ restaurant.image)}}" alt="Image du restaurant"> #}
							<img class="card-img-top" src="https://fakeimg.pl/250x100/" alt="Image du restaurant">


							<div class="card-body">
								<div class="card-title">{{ restaurant.nom }}</div>

								<small class="card-text">

									{{ restaurant.codePostal }},
									{{ restaurant.ville }}
								</small>
								<div class="card_favoris">
									<a class="card_container" href="{{ path('app_restaurant_show', {'id': restaurant.id}) }}">
										Découvrir...
									</a>
									<a type="button" id="addFav" href="{{ path('app_profile_control_favoris', {'id': restaurant.id}) }}">
										<i class="fa-solid fa-xl fa-star"></i>
									</a>
								</div>

							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>

		<button class="carousel-control-prev" href="#carouselExampleControls" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
			<span class="fa-solid fa-circle-chevron-left" aria-hidden="true"></span>
			<span class="sr-only">Précédent</span>
		</button>
		<button class="carousel-control-next" href="#carouselExampleControls" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
			<span class="fa-solid fa-circle-chevron-right" aria-hidden="true"></span>
			<span class="sr-only">Suivant</span>
		</button>

	</div>


{% endblock %}
