{% extends 'base.html.twig' %}

{% block title %}LigneCommande
{% endblock %}


{% block body %}
	<h1>LigneCommande index</h1>

	<section class="container">

		<p class="h4 text-center">Gérer les lignes de commandes</p>


		<div class="table-responsive-lg">
			<table class="table table-striped table-bordered  table-hover text-center">
				<thead class="table-warning">
					<tr>
						<th scope="col">Id</th>
						<th scope="col">Quantite</th>
						<th scope="col">Prix</th>
						<th scope="col">Produit</th>
						<th scope="col">Commande</th>
						<th scope="col">actions</th>
					</tr>
				</thead>
				<tbody>
					{% for ligne_commande in lignes_commande %}
						<tr>
							<td>
								{{ ligne_commande.id }}
							</td>
							<td>
								{{ ligne_commande.quantite }}
							</td>
							<td>
								{{ ligne_commande.prix }}
							</td>
							<td>
								{{ ligne_commande.produit }}
							</td>
							<td>
								{# {{ commande.reference }} #}
							</td>
							{# <td>
																																										<a href="{{ path('app_admin_ligne_commande_index', {'id': ligne_commande.id}) }}">
																																											{{ ligne_commande.commande }}
																																										</a>
																																									</td> #}

							<td>
								<a href="{{ path('app_admin_ligne_commande_show', {'id': ligne_commande.id}) }}" class="btn btn-primary m-2">Afficher</a>

								<a href="{{ path('app_admin_ligne_commande_edit', {'id': ligne_commande.id}) }}" class="btn btn-warning m-2">Modifier</a>

							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">Pas de résultat</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

		<div class="justify-content-center flex-wrap d-flex">

			<a href="{{ path('app_admin_ligne_commande_new') }}" class="btn btn-outline-dark">Créer une nouvelle ligne commande</a>
		</div>

	</section>
{% endblock %}
