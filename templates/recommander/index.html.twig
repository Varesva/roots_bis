{% extends 'base.html.twig' %}

{% block title %}
	{{ recommander_form_request_title}}
{% endblock %}

{% block body %}
	<section class="page_contact_container">
		<h1 class="position_center">
			Recommander un restaurant
		</h1>

		{{ form_start(recommander_form) }}
		<div class="row g-3">
			<div class="col-md-6">
				<label for="email" class="form-label">
					Email
				</label>
				{{ form_widget(recommander_form.email)}}
			</div>
			<div class="col-md-6">
				<label for="prenom" class="form-label">
					Nom du restaurant
				</label>
				{{ form_widget(recommander_form.resto)}}
			</div>
			<div class="col-12">
				<label for="message" class="form-label">
                Commentaire				
                </label>
				{{ form_widget(recommander_form.commentaire)}}
			</div>

			<div class="col-12">
				{{ form_widget(recommander_form.envoyer)}}
			</div>
		</div>

		{{ form_end(recommander_form) }}

	</section>

{% endblock %}
