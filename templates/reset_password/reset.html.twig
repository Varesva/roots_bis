{% extends 'base.html.twig' %}

{% block title %}
	Réinitialiser mon mot de passe
{% endblock %}

{% block metadesc %}
	Procéder dès à présent à la réinitialisation de votre mot de passe pour accéder à votre compte sur Roots.
{% endblock %}

{% block body %}
	<h1>
		Réinitialiser mon mot de passe
	</h1>

	<section class="bg-roots-yellow-linear">

		<p class="mb-5 mt-2 h4 text-center">
			Entrez votre nouveau mot de passe ci-dessous :
		</p>

		{{ form_start(resetForm, {
			'attr' : { 'class' : 'col-md-8 mx-auto' }
		} ) }}

		<p class="small">
			*Champs obligatoires
		</p>

		{{ form_row(resetForm.plainPassword) }}

		<div class="d-flex justify-content-center">
			<button class="btn btn-lg btn-success my-2">Enregistrer</button>
		</div>

		{{ form_end(resetForm) }}

		<div class="text-center d-flex justify-content-center">

			<p class="my-4 bg-roots-yellow-bordered mx-2 col-sm-9 p-3 rounded-3">

				Une fois votre nouveau mot de passe enregistré, vous pourrez immédiatement vous connecter à votre compte.
			</p>
		</div>

	</section>

{% endblock %}
