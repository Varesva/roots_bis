{% extends 'base.html.twig' %}

{% block title %}
	{{ restaurant.nom }}
{% endblock %}

{% block body %}
	<h1>En savoir plus sur :
		<br>
		{{ restaurant.nom }}
	</h1>

	<section
		class="container" id="restaurant_show">

		{# carousel de photos #}
		<div id="carouselExampleIndicators" class="carousel slide" data-interval="false">

			<div class="carousel-indicators">
				<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
				<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
				<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
			</div>
			{# photos #}
			<div class="carousel-inner ">
				<div class="carousel-item active">
					<img src="{{asset('upload/' ~ restaurant.image)}}" class="rounded  w-100" alt="Image du restaurant">
				</div>
				<div class="carousel-item">
					<img src="https://fakeimg.pl/500/" class="rounded w-100" alt="Image du restaurant">
				</div>
				<div class="carousel-item">
					<img src="https://fakeimg.pl/500/" class="rounded w-100" alt="Image du restaurant">
				</div>
			</div>
			{# boutons avant après #}
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Précedente</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Suivante</span>
			</button>
		</div>

		{# informations et descriptif accordeon #}

		<div class="accordion" id="accordionPanelsStayOpenExample">
			<div class="accordion-item">
				<article class="accordion-header" id="panelsStayOpen-headingOne">
					<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-label="Dérouler/Fermer le menu" aria-controls="panelsStayOpen-collapseOne">
						<p class="h4">
							Description
						</p>
					</button>
				</article>
				<div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
					<div class="accordion-body">
						{% if restaurant.categorie %}
							<p class="h5 text-center">
								{{ restaurant.categorie }}
							</p>
							<hr>
						{% endif %}
						{% if restaurant.specialite or restaurant.nutrition  %}
							<div class="descr1">
								<p>
									<span class=" font-weight-bold">
										Origine de la cuisine/des fondateurs
										<br>
									</span>
									{{ (restaurant.specialite) ? restaurant.specialite : '<span class="fa-sm"> Non renseignée </span>' }}
								</p>
								<p>
									<span class=" font-weight-bold">
										Convient pour les régimes alimentaires
										<br>
									</span>
									{{ (restaurant.nutrition) ? restaurant.nutrition : '<span class="fa-sm"> Non renseigné </span>' }}
								</p>
							</div>
							<hr>
						{% endif %}
						<p>
							{{ restaurant.description }}
						</p>
					</div>
				</div>
			</div>
			<div class="accordion-item">
				<h2 class="accordion-header" id="panelsStayOpen-headingTwo">
					<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-label="Dérouler/Fermer le menu" aria-controls="panelsStayOpen-collapseTwo">
						<p class="h4">
							Adresse et contact
						</p>
					</button>
				</h2>
				<div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo">
					<div class="accordion-body">
						<ul>
							<li>
								Adresse
							</li>
							<p>
								{{ restaurant.numRue }},
								{{ restaurant.rue }}
								<br>
								{{ restaurant.codePostal }},
								{{ restaurant.ville }}
								{# {{ restaurant.pays }} #}
							</p>
							<li>
								Adresse email
							</li>
							<p>
								{{ (restaurant.email) ? restaurant.email : '<span class="fa-sm"> Non renseignée </span>' }}
							</p>
							<li>
								Téléphone
							</li>
							<p>
								{{ (restaurant.telephone) ? restaurant.telephone : '<span class="fa-sm"> Non renseignée </span>' }}
							</p>
							<li>
								Site internet/réseaux sociaux
							</li>
							<p>
								{{ (restaurant.website) ? restaurant.website : '<span class="fa-sm"> Non renseignée </span>' }}
							</p>
						</ul>
					</div>
				</div>
			</div>

		</div>
		{# {% endfor %} #}
		<div class=" justify-content-center d-flex flex-wrap m-3">
			<a class="btn btn-dark m-3" href="{{ path('app_restaurant_index') }}">
				Retour
			</a>

			<a type="button" id="addFav" href="{{ path('app_profile_control_favoris', {'id': restaurant.id}) }}" class="btn btn-warning m-3">
				Ajouter aux favoris
				<i class="fa-solid fa-xl fa-star"></i>
			</a>
		</div>

	</section>

{% endblock %}

