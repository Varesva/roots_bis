{% extends 'base.html.twig' %}

{% block title %}Restaurant
{% endblock %}

{% block body %}
{# {% for restaurant in restaurants %} #}
	<h1>En savoir plus sur :
		<br>
		{{ restaurant.nom }}
	</h1>
	<h2>
		{{ restaurant.restauration }}
    </h2>
<section class="container">

{# carousel de photos #}
<div class="carousel slide text-center" data-bs-ride="carousel">
	<div class="carousel-inner ">
		<div class="carousel-item active">
			<img src="{{asset('upload/' ~ restaurant.image)}}" alt="Image du restaurant">
		</div>
		<div class="carousel-item">
			<img src="https://fakeimg.pl/500/" alt="Image du restaurant">
		</div>
		<div class="carousel-item">
			<img src="https://fakeimg.pl/500/" alt="Image du restaurant">
		</div>
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
<span class="fa-solid fa-circle-chevron-left" aria-hidden="true"></span>

		<span class="visually-hidden">Précédente</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
<span class="fa-solid fa-circle-chevron-right" aria-hidden="true"></span>
		<span class="visually-hidden">Suivante</span>
	</button>
</div>

{# informations  #}

<div class="accordion" id="accordionPanelsStayOpenExample">
	<div class="accordion-item">
		<h2 class="accordion-header" id="panelsStayOpen-headingOne">
			<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
				Fiche descriptive du restaurant
			</button>
		</h2>
		<div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
			<div class="accordion-body">
				<p>
					{{ restaurant.description }}
				</p>
			</div>
		</div>
	</div>
	<div class="accordion-item">
		<h2 class="accordion-header" id="panelsStayOpen-headingTwo">
			<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
				Adresse et contact du restaurant
			</button>
		</h2>
		<div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo">
			<div class="accordion-body">
				<ul>
					<li>
						Adresse :
						{{ restaurant.numRue }},
						{{ restaurant.rue }}
						<br>
						{{ restaurant.codePostal }},
						{{ restaurant.ville }},
						{{ restaurant.pays }}
					</li>

					<li>Adresse email :
						{{ restaurant.email }}</li>
					<li>Téléphone :
						{{ restaurant.telephone }}</li>
					<li>
						Site internet :
						{{ restaurant.website }}</li>
				</ul>
			</div>
		</div>
	</div>

</div>
{# {% endfor %} #}
<a class="btn" href="{{ path('app_restaurant_index') }}">Retour à la liste de restaurants</a>

</section>

{% endblock %}
