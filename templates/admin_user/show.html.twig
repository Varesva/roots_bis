{% extends 'base.html.twig' %}

{% block title %}
	Afficher User
{% endblock %}

{% block body %}
	<div class="bg_admin">
		<h1>Afficher User</h1>

		<div class="container">
			<div class="table-responsive-lg">
				<table class="table table-secondary table-hover table-striped table-bordered border-secondary">
					<tbody>
						<tr>
							<th scope="col" class="table-light">Id</th>
							<td>{{ user.id }}</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">Email</th>
							<td>{{ user.email }}</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">Roles</th>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">Nom</th>
							<td>{{ user.nom | upper }}</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">Prenom</th>
							<td>{{ user.prenom }}</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">Telephone</th>
							<td>
								{% if user.telephone != "" %}
									{{ user.telephone }}
								{% else %}
									<small class="opacity-75">
										<i>Non renseigné</i>
									</small>
								{% endif %}


							</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">Num (rue)</th>
							<td>
								{% if user.num != "" %}
									{{ user.num }}
								{% else %}
									<small class="opacity-75">
										<i>Non renseigné</i>
									</small>
								{% endif %}
							</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">Rue</th>
							<td>
								{% if user.rue != "" %}
									{{ user.rue }}
								{% else %}
									<small class="opacity-75">
										<i>Non renseignée</i>
									</small>
								{% endif %}
							</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">CP</th>
							<td>
								{% if user.cp != "" %}
									{{ user.cp }}
								{% else %}
									<small class="opacity-75">
										<i>Non renseigné</i>
									</small>
								{% endif %}
							</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">Ville</th>
							<td>
								{% if user.ville != "" %}
									{{ user.ville }}
								{% else %}
									<small class="opacity-75">
										<i>Non renseigné</i>
									</small>
								{% endif %}
							</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">Pays</th>
							<td>{{ user.pays }}</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">Complément d'adresse</th>
							<td>
								{% if user.complementAdresse != "" %}
									{{ user.complementAdresse }}

								{% else %}
									<small class="opacity-75">
										<i>Non renseigné</i>
									</small>
								{% endif %}
							</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">isVerified</th>
							<td>
								{% if user.isVerified != "0" %}
									<p>
										<small>
											Compte vérifié
											<i class="fa-solid fa-sm fa-circle-check"></i>
										</small>
									{% else %}
										<small class="opacity-75">
											<i>Compte non vérifié</i>
										</small>
									</p>
								{% endif %}
							</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">Commandes</th>
							<td>
								{# {{ user.commandes }} #}
							</td>
						</tr>
						<tr>
							<th scope="col" class="table-light">Favoris</th>
							<td>
								{# {{ user.favoris }} #}
							</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="d-flex flex-wrap justify-content-center">

				<a href="{{ path('app_admin_user_index') }}" class="btn  btn-light">Retour index User</a>

				<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn  btn-warning">Modifier</a>

				{{ include('admin_user/_delete_form.html.twig') }}
			</div>
		</div>
	</div>

{% endblock %}
