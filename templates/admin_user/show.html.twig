{% extends 'base.html.twig' %}

{% block title %}Admin - User - Roots
{% endblock %}

{% block body %}
	<h1>Afficher ce User</h1>
	<section class="container">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ user.nom }}</td>
				</tr>
				<tr>
					<th>Prenom</th>
					<td>{{ user.prenom }}</td>
				</tr>
				<tr>
					<th>Telephone</th>
					<td>{{ user.telephone }}</td>
				</tr>
			</tbody>
		</table>
		<div class="d-flex justify-content-around">

			<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-outline-warning">Modifier</a>

			<a href="{{ path('app_admin_user_index') }}" class="btn btn-outline-dark">Retour Ã  la liste des utilisateurs</a>

			{{ include('admin_user/_delete_form.html.twig') }}
		</div>
	</section>

{% endblock %}
