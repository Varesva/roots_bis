{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="register_container">
	<section class="section_conn">
		<h1 class="position_center">Connexion</h1>
		{# {% include "login.html.twig" %} #}
	</section>

	<section class="section_inscr position_center">
		<h1 class="position_center">
            {{inscription}}
        </h1>

		{{ form_start(registrationForm) }}
		<div class="row row_register g-3 position_center">

			<div class="col-md-6">
				<label for="prenom" class="form-label">
					Prénom
				</label>
				{{ form_widget(registrationForm.prenom)}}
			</div>
			<div class="col-md-6">
				<label for="nom" class="form-label">
					Nom
				</label>
				{{ form_widget(registrationForm.nom)}}
			</div>

			<div class="col-md-6">
				<label for="email" class="form-label">
					Email
				</label>
				{{ form_widget(registrationForm.email)}}
			</div>

			<div class="col-md-6">
				<label for="password" class="form-label">
					Mot de passe
				</label>
				{{ form_widget(registrationForm.plainPassword)}}
			</div>

			<div class="agreeTerms_container col-12">
				{{ form_widget(registrationForm.agreeTerms) }}
				<p class="agreeTerms_text">
					J'accepte les
					<a href="#">Conditions générales d'utilisation</a>
				</p>
			</div>

			<button type="submit" class="btn btn_register">S'inscrire</button>
		</div>

		{{ form_end(registrationForm) }}
	</section>
</div>

{% endblock %}
