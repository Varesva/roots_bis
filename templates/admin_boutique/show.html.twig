{% extends 'base.html.twig' %}

{% block title %}Admin - Afficher Boutique - Roots
{% endblock %}

{% block body %}
	<h1>Afficher une catégorie de la Boutique</h1>
	<section class="container">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ boutique.id }}</td>
				</tr>
				<tr>
					<th>Type_produit</th>
					<td>{{ boutique.typeProduit }}</td>
				</tr>
			</tbody>
		</table>
		<div class="d-flex justify-content-around">
			<a href="{{ path('app_admin_boutique_edit', {'id': boutique.id}) }}" class="btn btn-outline-warning">Modifier</a>
			
			<a href="{{ path('app_admin_boutique_index') }}" class="btn btn-outline-dark">Retour à la liste des catégories</a>

			{{ include('admin_boutique/_delete_form.html.twig') }}
		</div>
	</section>
{% endblock %}
