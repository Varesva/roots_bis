{% extends 'base.html.twig' %}

{% block title %}Afficher Boutique
{% endblock %}

{% block body %}
	<h1>Afficher catég Boutique</h1>

	<section class="container">
		<div class="table-responsive-lg">

			<table class="table table-striped table-bordered">

				<tbody>
					<tr>
						<th scope="col">Id</th>
						<td>{{ boutique.id }}</td>
					</tr>
					<tr>
						<th scope="col">Nom categ type produit</th>
						<td>{{ boutique.typeProduit }}</td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="d-flex justify-content-around flex-wrap">

			<a href="{{ path('app_admin_boutique_index') }}" class="btn btn-outline-dark m-2">Retour à la liste des catégories</a>

			<a href="{{ path('app_admin_boutique_edit', {'id': boutique.id}) }}" class="btn btn-warning m-2">Modifier</a>

			{{ include('admin_boutique/_delete_form.html.twig') }}
		</div>
	</section>
{% endblock %}
