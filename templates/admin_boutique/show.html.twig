{% extends 'base.html.twig' %}

{% block title %}
	Afficher Boutique
{% endblock %}

{% block body %}
	<div class="bg_admin">

		<h1>Afficher Boutique</h1>

		<div class="container">

			<div class="table-responsive-lg">

				<table class="table table-secondary table-hover table-striped table-bordered border-secondary">

					<tbody>
						<tr>
							<th scope="col">Id</th>
							<td>{{ boutique.id }}</td>
						</tr>
						<tr>
							<th scope="col">Nom categ type produit</th>
							<td>{{ boutique.typeProduit }}</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="d-flex justify-content-around flex-wrap">

				<a href="{{ path('app_admin_boutique_index') }}" class="btn btn-light">Retour index Boutique</a>

				<a href="{{ path('app_admin_boutique_edit', {'id': boutique.id}) }}" class="btn btn-warning">Modifier</a>

				{{ include('admin_boutique/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
