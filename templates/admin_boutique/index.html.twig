{% extends 'base.html.twig' %}

{% block title %}Boutique index{% endblock %}

{% block body %}
    <h1>Boutique index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type_produit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for boutique in boutiques %}
            <tr>
                <td>{{ boutique.id }}</td>
                <td>{{ boutique.typeProduit }}</td>
                <td>
                    <a href="{{ path('app_admin_boutique_show', {'id': boutique.id}) }}">show</a>
                    <a href="{{ path('app_admin_boutique_edit', {'id': boutique.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_boutique_new') }}">Create new</a>
{% endblock %}
