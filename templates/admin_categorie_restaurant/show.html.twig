{% extends 'base.html.twig' %}

{% block title %}
	Afficher CategorieRestaurant
{% endblock %}


{% block body %}
	<div class="bg_admin">
		<h1>Afficher categRestaurant</h1>

		<div class="container">

			<div class="table-responsive-lg">

				<table class="table table-secondary table-hover table-striped table-bordered border-secondary">
					<tbody>
						<tr>
							<th scope="col">Id</th>
							<td>{{ categorie_restaurant.id }}</td>
						</tr>
						<tr>
							<th scope="col">Type_cuisine</th>
							<td>{{ categorie_restaurant.typeCuisine }}</td>
						</tr>
						<tr>
							<th scope="col">Image</th>
							<td>
								<img src="{{asset('upload/' ~ categorie_restaurant.image)}}" class=" w-75 rounded-3">
							</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="d-flex justify-content-center flex-wrap">

				<a href="{{ path('app_admin_categorie_restaurant_index') }}" class="btn btn-light">Retour categRestau index</a>

				<a href="{{ path('app_admin_categorie_restaurant_edit', {'id': categorie_restaurant.id}) }}" class="btn btn-warning">Modifier</a>

				{{ include('admin_categorie_restaurant/_delete_form.html.twig') }}
			</div>
		</div>
	</div>

{% endblock %}
