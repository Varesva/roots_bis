{% extends 'base.html.twig' %}

{% block title %}Admin - Afficher CategorieRestaurant - Roots
{% endblock %}


{% block body %}
	<h1>Afficher une catégorie de Restaurant</h1>
	<section class="container">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ categorie_restaurant.id }}</td>
				</tr>
				<tr>
					<th>Type_cuisine</th>
					<td>{{ categorie_restaurant.typeCuisine }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>
<img src="{{asset('upload/' ~ categorie_restaurant.image)}}" class=" w-75 rounded-3">

					</td>
				</tr>
			</tbody>
		</table>
		<div class="d-flex justify-content-around">
			<a href="{{ path('app_admin_categorie_restaurant_edit', {'id': categorie_restaurant.id}) }}" class="btn btn-outline-warning">Modifier</a>

			<a href="{{ path('app_admin_categorie_restaurant_index') }}" class="btn btn-outline-dark">Retour à la liste des catégories</a>

			{{ include('admin_categorie_restaurant/_delete_form.html.twig') }}
